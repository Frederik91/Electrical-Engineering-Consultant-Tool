<UserControl x:Class="ProjectCostEstimator.Views.DataFileManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCostEstimator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid>
        <TabControl
                    Height="700"
                    Width="1200">
            <TabItem Header="Stored files">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height ="Auto"/>
                        <RowDefinition Height ="25"/>
                        <RowDefinition Height ="25"/>
                        <RowDefinition Height ="275"/>
                        <RowDefinition Height ="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="List of stored XML-files."
			       VerticalAlignment="Top"
			       Width="Auto"/>

                    <ListView Grid.Row="1" Grid.RowSpan="3" Margin="10,0,10,0" Height="300" Width="180" VerticalAlignment="Top" HorizontalAlignment="Left" Name="XMLFilePathList" ItemsSource="{Binding XMLFilePathList}" SelectedIndex="{Binding SelectedProjectIndex}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" 
                                                DisplayMemberBinding="{Binding Name}"
                                                Width="170"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <Label Grid.Row="0" Grid.Column="2" Content="Project name" Width="120"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding ProjectName}"/>
                    
                    <Label Grid.Row="0" Grid.Column="3" Content="ATR"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding ATR}"/>

                    <Label Grid.Row="0" Grid.Column="4" Content="Tender date" />
                    <DatePicker Grid.Row="1" Grid.Column="4" SelectedDate="{Binding TenderDate}"/>

                    <Label Grid.Row="0" Grid.Column="5" Content="Completion date" />
                    <DatePicker Grid.Row="1" Grid.Column="5" SelectedDate="{Binding CompletionDate}"/>

                    <Button Margin="10,0,0,0"  Grid.Row="1" Grid.Column="6" Content="Save changes"  Command="{Binding SaveChangesCommand}"/>

                </Grid>
            </TabItem>
            <TabItem Header="Import">
                <Grid>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="Import Gprog-file to new XML project file"
			       VerticalAlignment="Top"
			       Width="Auto"/>
                </Grid>
            </TabItem>
            <TabItem Header="Edit">
                <Grid>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="Edit existing XML-file"
			       VerticalAlignment="Top"
			       Width="Auto"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
